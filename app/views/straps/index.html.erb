<p id="notice"><%= notice %></p>

<h1>Straps</h1>

<table>
  <thead>
    <tr>
      <th>Guitar</th>
      <th>User</th>
      <th>Size</th>
      <th>In stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @straps.each do |strap| %>
      <tr>
        <td><%= strap.guitar %></td>
        <td><%= strap.user %></td>
        <td><%= strap.size %></td>
        <td><%= strap.in_stock_quantity %></td>
        <td><%= link_to 'Show', strap %></td>
        <td><%= link_to 'Edit', edit_strap_path(strap) %></td>
        <td><%= link_to 'Destroy', strap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Strap', new_strap_path %>
